<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/ednom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="nom"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="81dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edduree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="text"
        android:hint="duree"
        app:layout_constraintTop_toBottomOf="@+id/ednom"
        tools:layout_editor_absoluteX="81dp"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/edduree"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnajouter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ajouter"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:layout_editor_absoluteX="127dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnafficher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="aficher"
        app:layout_constraintTop_toBottomOf="@+id/btnajouter"
        tools:layout_editor_absoluteX="127dp"
        tools:ignore="MissingConstraints" />

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnafficher"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>